#include "ap_main.h"
#include "usart.h"


extern uint8_t rx_buffer[1];
void ap_init()
{
    //입력부 초기세팅
    Listener_Init();
    
}


void HAL_TIM_PeriodElapsedCallback(TIM_HandleTypeDef *htim)
{
    if (htim->Instance == TIM2)
    {
        FND_Display_Data();
        Timewatch_IncTimeCallBack();
        stopwatch_IncTimeCallBack();
    }
    
}





int ap_main()
{

    HAL_TIM_Base_Start_IT(&htim2);
    HAL_UART_Receive_IT(&huart2, &rx_buffer[0], 1);

    while (1)
    {
       Listener_Execute();
       Controller_Execute();
       Presenter_Execute();
            
    }
    
    return 0;
   
}









