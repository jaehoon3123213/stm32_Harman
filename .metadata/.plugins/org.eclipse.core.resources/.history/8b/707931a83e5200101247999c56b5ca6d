#include "ap_main.h"

void HAL_TIM_PeriodElapsedCallback(TIM_HandleTypeDef *htim)
{
	if(htim->Instance == TIM2) {
		FND_DispDataCallBack();

		TimeWatch_IncTimeCallBack();
		StopWatch_IncTimeCallBack();
	}
}

void HAL_UART_RxCpltCallback(UART_HandleTypeDef *huart)
{
	if (huart->Instance == USART2) {
		Listener_UartCallBack();
	}
}


int ap_main()
{

	HAL_TIM_Base_Start_IT(&htim2);
		HAL_TIM_PWM_Start(&htim3, TIM_CHANNEL_1);

//	LCD_writeStringXY(0, 0, "Hello World!");
//	LCD_writeStringXY(1, 0, "Hello STM32!");
	while(1)
	{
		for (uint32_t freq=2; freq < 10000-1; freq++)
		{
			__HAL_TIM_SET_AUTORELOAD(&htim3,freq);
			__HAL_TIM_SET_COMPARE(&htim3,TIM_CHANNEL_1, freq/2);
		}
	}

	return 0;
}

void ap_init()
{
	Listener_Init();
	Presenter_Init();
	Sound_Init();
	Sound_PowerOn();
}



