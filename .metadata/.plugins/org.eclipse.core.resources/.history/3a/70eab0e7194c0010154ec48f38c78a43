#include "LedBar.h"

typedef struct {
	GPIO_TypeDef *GPIOx;
	uint32_t PinNum;
} LedBar_TypeDef;


LedBar_TypeDef ledBar[8] ={
		{GPIOA, 0},
		{GPIOA, 1},
		{GPIOA, 4},
		{GPIOB, 0},
		{GPIOC, 1},
		{GPIOC, 0},
		{GPIOC, 2},
		{GPIOC, 3}
};

void LedBar_Write(uint32_t data)
{
	for (int i = 0; i<8; i ++)
	{
		if(data & (1<<i) == 0)
		{
			GPIO_WritePin(ledBar[i].GPIOx, ledBar[i].PinNum, PIN_RESET);
		}
		else {
			GPIO_WritePin(ledBar[i].GPIOx, ledBar[i].PinNum, PIN_SET);
		}
	}
};

